{
    "compileOnSave": true,
    "include": ["./src/**/*.ts"],
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./build",
        "noStrictGenericChecks": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "watch": true,
        "resolveJsonModule": true
    }
}